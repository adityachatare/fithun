<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_12sdp"
    android:orientation="vertical"
    android:background="@drawable/border_white_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readex_pro_regular"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_down"/>



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/expandHowToPlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/howToPlayImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/how_to_play"/>


        <TextView
            android:id="@+id/txtContentHowToPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readex_pro_regular"
            android:justificationMode="inter_word"
            android:textColor="@color/text_color"
            android:layout_margin="@dimen/_8sdp"
            android:textSize="@dimen/_10sdp"/>


    </LinearLayout>



</LinearLayout>


</LinearLayout>