<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_round"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/line_bottomsheet"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:fontFamily="@font/readex_pro_regular"
        android:text="Filter"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/readex_pro_regular"
        android:text="Brands"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />
    <RelativeLayout
        android:id="@+id/llBrands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/white_border_background"
        android:paddingVertical="@dimen/_8sdp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/brandsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readex_pro_regular"
            android:textColor="@color/text_color"
            android:layout_marginStart="@dimen/_5sdp"
            android:hint="Choose"/>

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/arrow_down"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:textColor="@color/red"
        android:visibility="gone"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/readex_pro_regular"
        android:layout_marginVertical="@dimen/_50sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/readex_pro_regular"
        android:text="Price"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/white_border_background"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_8sdp">


        <Spinner
            android:id="@+id/priceSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/price"
            android:fontFamily="@font/readex_pro_regular"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:theme="@style/price"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_40sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/CancelClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@drawable/red_border_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/readex_pro_regular"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:text="Cancel"
                android:textColor="@color/check_color"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/applyClick"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/red_button_image">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/readex_pro_regular"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:text="Apply Filter"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />
        </RelativeLayout>


    </LinearLayout>



</LinearLayout>